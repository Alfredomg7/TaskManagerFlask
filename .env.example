# Copy this file as .env and replace the placeholders with your actual values.

# Flask configuration
SECRET_KEY=ReplaceWithYourSecretKey
SECURITY_PASSWORD_SALT=ReplaceWithYourPasswordSalt

# Database configuration
DATABASE_URL=sqlite:///path_to_your_database.db

# Email configuration for Flask-Mail
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
